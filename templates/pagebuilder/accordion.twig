<section id="informatie" class="mod-accordion {{ item.achtergrond }} bg-text">
	<div class="container anime-fadein">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
				<div class="text-center">
					{% if item.titel %}
					<h2 class="altfont"> {{ item.titel }} </h2>
					{% endif %}
					{% if item.tekst %}
					<p> {{ item.tekst }} </p>
					{% endif %}
				</div>
				{% if item.categorie|length > 1 %}
					<ul class="nav nav-pills mb-5 justify-content-center" id="pills-tab" role="tablist">
						{% set categorie_index = '0' %}
						{% for item in item.categorie %}
						{% set categorie_index = categorie_index + 1 %}
						<li class="nav-item" role="presentation">
							<button class="nav-link {% if loop.first %}active{% endif %}" id="pills-tab" data-bs-toggle="pill" data-bs-target="#tab-{{ categorie_index }}" type="button" role="tab" aria-controls="pills" {% if loop.first %}aria-selected="true" {% endif %}>{{ item.titel }}</button>
						</li>
						{% endfor %}
					</ul>
				{% endif %}


				<div class="tab-content" id="pills-tabContent">
					{% set categorie_index = '0' %}
					{% for item in item.categorie %}
					{% set categorie_index = categorie_index + 1 %}
					<div class="tab-pane fade {% if loop.first %}show active{% endif %}" id="tab-{{ categorie_index }}" role="tabpanel" aria-labelledby="pills-tab">
						<div class="accordion" id="accordion_{{ sectionno }}_{{ categorie_index }}">
							{% if item.cards %}
							{% set cardno = 1 %}
							{% for card in item.cards %}
							<div class="item">
								<a id="heading_{{ sectionno }}_{{ categorie_index }}_{{ cardno }}" class="heading" data-bs-toggle="collapse" data-bs-target="#collapse_{{ sectionno }}_{{ categorie_index }}_{{ cardno }}" aria-controls="collapse_{{ sectionno }}_{{ categorie_index }}_{{ cardno }}">
									<div class="row">
										<div class="col">
											{{ card.titel }}
										</div>
										<div class="col-auto">
											<i class="fas fa-plus"></i>
											<i class="fas fa-minus"></i>
										</div>
									</div>
								</a>
								<div id="collapse_{{ sectionno }}_{{ categorie_index }}_{{ cardno }}" class="collapse bg-white" aria-labelledby="heading_{{ sectionno }}_{{ categorie_index }}_{{ cardno }}" data-bs-parent="#accordion_{{ sectionno }}_{{ categorie_index }}">
									<div class="antwoord body3">
										{{ card.tekst }}
									</div>
								</div>
							</div>
							{% set cardno = cardno + 1 %}
							{% endfor %}
							{% endif %}
						</div>
					</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</section>