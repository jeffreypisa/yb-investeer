<section id="section{{ sectionno }}" class="pb-afbeelding {{ item.achtergrond }} text-white">
	{% if item.afbeelding %}
		<div class="fill-space js-parallax">
			<div class="bg-cover" style="background-image: url({{ Image(item.afbeelding).src }})">
			</div>
		</div>
	{% endif %}
	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-6 col-xl-4 offset-xl-8 text-right">
				{% if item.titel %}
					<h2 class="altfont"> {{ item.titel }} </h2>
				{% endif %}
			</div>
		</div>
    </div>
</section>