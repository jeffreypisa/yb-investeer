<section class="mod-bannerslider text-white" data-scroll-section>
	<div class="bannerslider" data-rellax-speed="1">
		<div class="js-slick-bannerslider">
			{% for item in post.get_field('slider') %}
				<div class="item d-flex align-items-center">		
					<div class="fill-space" data-scroll data-scroll-speed="-3">
						<div class="bg-cover" style="background-image: url({{ Image(item.afbeelding)|resize(1920) }})">
						</div>
					</div>
					
					<div class="container" data-scroll data-scroll-speed="-1">
						<div class="row">
							<div class="col-10 offset-1 offset-lg-2 col-lg-8 text-center">
								<h2 class="h1 ml10 altfont weight-400 mb-2">
									<div class="line">
										<span class="text-wrapper">
											<span class="letters">  {{ item.titel }} 
											</span>
										</span>
									</div>
								</h2>
							</div>
						</div>
						<div class="row">
							<div class="col-10 offset-1 offset-lg-2 col-lg-8 text-center">
								{% if item.titel %}
									<p class="lead mb-4 d-none d-md-block"> {{ item.tekst }} </p>
								{% endif %}
								<div class="d-md-none">
									<br>
								</div>
								{% if item.link %}
									<a href="{{ item.link.url }}" target="{{ item.link.target }}" class="btn btn-primary"> {{ item.link.title }} </a>
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section> 